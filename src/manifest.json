{
  "manifest_version": 2,
  "name": "Service Status Dashboard",
  "author": "Dimo Petrov",
  "homepage_url": "https://github.com/webdude21/ServiceStatusDash",
  "description": "A Chrome extension designed to monitor the status of services",
  "version": "0.8",
  "options_page": "views/options.html",
  "options_ui": {
    "page": "views/options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": "img/icons/success48.png",
    "default_popup": "views/popup.html"
  },
  "background": {
    "scripts": ["scripts/background-bundle.js"]
  },
  "icons": {
    "16": "img/icons/success16.png",
    "48": "img/icons/success48.png",
    "128": "img/icons/success128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "http://veui5infra.dhcp.wdf.sap.corp:8080/databinding/proxy/https/git.wdf.sap.corp/access/"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "web_accessible_resources": [
    "img/icon128.png"
  ]
}
